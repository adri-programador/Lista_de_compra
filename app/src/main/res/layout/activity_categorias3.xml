<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="categorias3VM" type="com.application.app.modules.categorias3.data.viewmodel.Categorias3VM"/>
    </data>
    <LinearLayout android:id="@+id/linearGroup130"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <ScrollView android:clipToPadding="false"
            android:fillViewport="true"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="match_parent"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearGroup43"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical" android:paddingBottom="@dimen/_90pxv">
                <FrameLayout android:id="@+id/frameGroup45"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_29pxh"
                    android:layout_marginStart="@dimen/_29pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent" style="@style/groupStylelime_700">

                    <com.asksira.loopingviewpager.indicator.CustomShapePagerIndicator
                        android:id="@+id/indicatorGroup16"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_width="wrap_content"
                        app:drawable_normal="@drawable/indicator_selected_bg_white_a700_radius_8"
                        app:drawable_selected="@drawable/indicator_selected_bg_white_a700_radius_8" app:indicator_size="@dimen/_14pxh"/>

                    <ImageView
                        android:id="@+id/imageSi3"
                        android:layout_width="@dimen/_16pxh"
                        android:layout_height="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_306pxh"
                        android:layout_marginEnd="@dimen/_46pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_si3"
                        tools:ignore="ImageContrastCheck" />
                </FrameLayout>
                <LinearLayout android:id="@+id/linearTopappbar"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStylelime_700cornerRadius">
                    <ImageView android:id="@+id/imageArrowback"
                        android:layout_height="@dimen/_32pxh"
                        android:layout_marginBottom="@dimen/_942pxv"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_width="@dimen/_32pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_arrowback"/>
                    <ImageView android:id="@+id/imageShoppingbasket"
                        android:layout_height="@dimen/_32pxh"
                        android:layout_marginBottom="@dimen/_942pxv"
                        android:layout_marginStart="@dimen/_332pxh"
                        android:layout_width="@dimen/_32pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_shoppingbasket"/>
                    <TextView android:gravity="top|center"
                        android:id="@+id/txtMercadona"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_944pxv"
                        android:layout_marginEnd="@dimen/_52pxh"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_weight="4.2"
                        android:layout_width="0dp"
                        android:text="@{categorias3VM.categorias3Model.txtMercadona}"
                        style="@style/txtSFCompactmedium22" tools:text="@string/lbl_mercadona"/>
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayoutGroup21"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_878pxv"
                        android:layout_marginTop="@dimen/_64pxv"
                        android:layout_width="match_parent"
                        app:tabBackground="@drawable/selector_bg_lime_700_border_bluegray_900_radius_48"
                        app:tabIndicatorColor="@android:color/transparent"
                        app:tabIndicatorHeight="0dp" app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/white_A700" app:tabTextColor="@color/bluegray_900"/>
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerGroup65"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_128pxv"
                        android:layout_weight="1" android:layout_width="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
